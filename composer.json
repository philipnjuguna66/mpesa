{
    "name": "rickodev/mpesa",
    "description": "Framework Agnostic Php Mpesa Sdk",
    "keywords": [
        "rickodev",
        "mpesa"
    ],
    "homepage": "https://github.com/rickodev/mpesa",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Moses Mwangi",
            "email": "mwangimoses171@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.5",
        "ext-json": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Rickodev\\Mpesa\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rickodev\\Mpesa\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
